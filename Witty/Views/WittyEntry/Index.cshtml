@model GetWittyEntryFormViewModel

@if (Model.NotExistsMessage != string.Empty)
{
    <div class="container">
        <div class="col-12">
            @Model.NotExistsMessage
        </div>
    </div>
}


<form asp-action="Get" method="post" role="form" class="container mt-5">
    <div class="row mb-3">
        <label asp-for="Question" class="form-label text-center"></label>
        <div class="col-9">
            <input id="autoComplete" asp-for="Question" class="form-control" />
        </div>
        <div class="col-3">
            <input type="submit" class="btn btn-primary" value="Submit" />
        </div>
    </div>
</form>

<div class="container">
    <div class="row">
        <div id="random-question" class="col-12">

        </div>
    </div>
    <div class="row">
        <div id="random-response" class="col-12">

        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            AutoCompleteService.init();
            RandomWittyEntryGenerator.init();
        });
    </script>
}